  const startVoiceSearch = () => {
    // HTTPS kontrolÃ¼
    if (window.location.protocol !== 'https:' && window.location.hostname !== 'localhost') {
      toast.error('Sesli arama iÃ§in HTTPS gerekli. LÃ¼tfen gÃ¼venli baÄŸlantÄ± kullanÄ±n.');
      return;
    }

    // TarayÄ±cÄ± desteÄŸi kontrolÃ¼
    if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
      toast.error('Sesli arama bu tarayÄ±cÄ±da desteklenmiyor. Chrome, Edge veya Safari kullanÄ±n.');
      return;
    }

    // Mikrofon izni kontrolÃ¼
    if (navigator.permissions) {
      navigator.permissions.query({ name: 'microphone' as PermissionName }).then((result) => {
        if (result.state === 'denied') {
          toast.error('Mikrofon izni reddedildi. TarayÄ±cÄ± ayarlarÄ±ndan izin verin.');
          return;
        }
        startRecognition();
      });
    } else {
      startRecognition();
    }
  };

  const startRecognition = () => {
    try {
      const SpeechRecognition = (window as any).SpeechRecognition || (window as any).webkitSpeechRecognition;
      const recognition = new SpeechRecognition();
      
      recognition.lang = 'tr-TR';
      recognition.continuous = false;
      recognition.interimResults = false;
      recognition.maxAlternatives = 1;

      recognition.onstart = () => {
        setIsVoiceSearchActive(true);
        setVoiceSearchText('Dinleniyor... KonuÅŸmaya baÅŸlayÄ±n');
        toast.success('Sesli arama baÅŸladÄ±');
      };

      recognition.onresult = (event: any) => {
        const transcript = event.results[0][0].transcript;
        console.log('Sesli arama sonucu:', transcript);
        setSearchTerm(transcript);
        setVoiceSearchText(transcript);
        // Sesli arama sonucunu arama Ã§ubuÄŸuna yazdÄ±r ve otomatik arama yap
        setTimeout(() => {
          performSearch(transcript);
          toast.success(`"${transcript}" aranÄ±yor...`);
        }, 100);
      };

      recognition.onerror = (event: any) => {
        console.error('Sesli arama hatasÄ±:', event.error);
        setIsVoiceSearchActive(false);
        setVoiceSearchText('');
        
        let errorMessage = 'Sesli arama hatasÄ±';
        switch (event.error) {
          case 'network':
            errorMessage = 'AÄŸ baÄŸlantÄ±sÄ± hatasÄ±. Ä°nternet baÄŸlantÄ±nÄ±zÄ± kontrol edin.';
            break;
          case 'not-allowed':
            errorMessage = 'Mikrofon izni reddedildi. TarayÄ±cÄ± ayarlarÄ±ndan izin verin.';
            break;
          case 'no-speech':
            errorMessage = 'Ses algÄ±lanamadÄ±. Daha net konuÅŸun.';
            break;
          case 'audio-capture':
            errorMessage = 'Mikrofon eriÅŸim hatasÄ±. Mikrofonunuzu kontrol edin.';
            break;
          case 'service-not-allowed':
            errorMessage = 'Sesli arama servisi kullanÄ±lamÄ±yor.';
            break;
          default:
            errorMessage = `Sesli arama hatasÄ±: ${event.error}`;
        }
        
        toast.error(errorMessage);
      };

      recognition.onend = () => {
        setIsVoiceSearchActive(false);
        setVoiceSearchText('');
        console.log('Sesli arama sonlandÄ±');
      };

      recognition.start();
      
    } catch (error) {
      console.error('Sesli arama baÅŸlatma hatasÄ±:', error);
      toast.error('Sesli arama baÅŸlatÄ±lamadÄ±. LÃ¼tfen tekrar deneyin.');
