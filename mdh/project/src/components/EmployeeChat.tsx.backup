    // PopÃ¼ler aramalar
    const popularSearches = [
      'toplantÄ±', 'proje', 'rapor', 'deadline', 'bÃ¼tÃ§e', 'mÃ¼ÅŸteri', 'satÄ±ÅŸ', 'pazarlama'
    ];

    // KullanÄ±cÄ±nÄ±n geÃ§miÅŸ aramalarÄ±
    const history = JSON.parse(localStorage.getItem('searchHistory') || '[]');
    
    // Benzer kelimeler (basit synonym sistemi)
    const synonyms: { [key: string]: string[] } = {
      'toplantÄ±': ['meeting', 'gÃ¶rÃ¼ÅŸme', 'randevu'],
      'proje': ['project', 'Ã§alÄ±ÅŸma', 'iÅŸ'],
      'rapor': ['report', 'analiz', 'sunum'],
      'mÃ¼ÅŸteri': ['customer', 'client', 'alÄ±cÄ±'],
      'satÄ±ÅŸ': ['sale', 'sales', 'satÄ±ÅŸlar']
    };

    let suggestions = [...popularSearches, ...history];
    
    // Synonym'larÄ± ekle
    Object.entries(synonyms).forEach(([key, values]) => {
      if (partialQuery.toLowerCase().includes(key)) {
        suggestions.push(...values);
      }
    });

    // Filtrele ve sÄ±rala
    suggestions = suggestions
      .filter(suggestion => suggestion.toLowerCase().includes(partialQuery.toLowerCase()))
      .slice(0, 8); // Maksimum 8 Ã¶neri

    setSearchSuggestions(suggestions);
